@component('pages/layout/app')
  @slot('main')
    @let(url = user ? route('users.update', { id: user.id }, { qs: { _method: 'PUT' } }) : route('users.store'))
    <div class="h-1/4 flex w-full justify-center">
      <div class="place-self-center m-10 p-3 md:p-4 bg-secondary text-amber-50
      rounded-md shadow-bottom shadow-zinc-600/50 md:w-4/11 lg:w-3/11">
        @form({ action: url, method: 'POST' })
          <div class="flex flex-col gap-1">
            <label for="username">
              Nome do Usuário
            </label>

            @!input({
              type: 'text',
              name: 'username',
              placeholder: 'nome ...',
              value: product?.name || ''
            })
          </div>

          <div class="flex flex-col">
            <label for="age">
              Idade
            </label>

            @!input({
              type: 'number',
              name: 'age',
              placeholder: 'idade ...',
              value: user?.age || ''
            })
          </div>

          <div class="flex flex-col">
            <label for="email">
              E-mail
            </label>

            @!input({
              type: 'email',
              name: 'email',
              placeholder: 'email ...',
              value: user?.email || ''
            })
          </div>
          <div class="flex flex-col">
            <label for="password">
              Senha
            </label>

            @!input({
              type: 'password',
              name: 'password',
              placeholder: 'senha ...',
              value: ''
            })
          </div>
          <button type="submit" class=" text-center px-2 py-2 bg-accept rounded-full border-2 
          border-accept-border place-self-center w-3/5 shadow-sm shadow-zinc-600/50 hover:shadow-md 
          hover:scale-101 transition duration-150 ease-in">
            {{ user ? 'Atualizar Usuário' : 'Criar Usuário' }}
          </button>
        @end
      </div>
    </div>
  @endslot
@endcomponent